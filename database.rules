service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Products: Publicly readable, writeable only by admins
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == "admin";
    }

    // 2. Users & Sub-collections
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Private Sub-collections (medical records, pet data)
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. Petbook Posts
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow author to edit OR any user to update the 'likes' array
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
      );
    }

    // 4. Petbook Comments
    match /comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 5. Petora Questions [NEW]
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow author to edit content OR community to update 'upvotes' AND 'answerCount'
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes', 'answerCount'])
      );
    }

    // 6. Petora Answers [NEW]
    match /answers/{answerId} {
      allow read: if request.auth != null;
      // Allow manual creation by user OR by client for AI (if strictly client-sided)
      allow create: if request.auth != null && (
          request.resource.data.userId == request.auth.uid ||
          request.resource.data.userId == "AI_ASSISTANT" 
      );
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow author to edit content OR community to update 'upvotes'
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes'])
      );
    }
  }
}